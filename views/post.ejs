<!-- _header -->
<%- include('partials/_header') -%>

  <body>

    <!-- Navigation -->
    <%- include('partials/_navigation') -%>

      <!-- Page Header -->
      <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
        <div class="overlay"></div>
        <div class="container">
          <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
              <div class="post-heading">
                <h1><%- post.title %></h1>
                <span class="meta">Posted by
                  <a href="#">Start Bootstrap</a>
                  on <%- post.dateCreate %></span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Post Content -->
      <article>
        <div class="button">
          <div class="tm-bg-gray tm-share-box">
            <div class="rows">
              <div class="text-center">
                <a href="/posts/edit/<%- post._id %>"
                  class="btn btn-primary p-1 mb-4 tm-btn-animate tm-btn-download tm-icon-download rounded-6">
                  <span>Update Details</span>
                </a>

                <div class="text-center">
                  <a href="/posts/<%- post._id %>?_method=DELETE"
                    class="btn btn-danger p-1 tm-btn-animate tm-btn-download tm-icon-download"
                    onclick="return confirm('Are you sure?')"><span>Delete
                      Photo</span></a>
                </div>

              </div>
            </div>
          </div>
          <div class="container">
            <div class="row">
              <div class="col-lg-8 col-md-10 mx-auto">
                <p class="subheading"><%- post.detail %></p>
              </div>
            </div>
          </div>
      </article>

      <hr>

      <!-- Footer -->
      <%- include('partials/_footer') -%>


  </body>


  </html>